<div class="panel">
  <%= form_tag(scheduled_activities_path, method: "GET") do  %>
    <p>
      What do you want to do?
      <%= select_tag("activity_id", options_from_collection_for_select(@activities, "id", "name", @activity)) %>
    </p>
    <%= submit_tag "Update" %>
  <% end %>
</div>

<table class="table">
  <tr>
    <th>Rink</th>
    <th>Time</th>
    <th>Gender</th>
    <th>Ages</th>
  </tr>
  <% @scheduled_activities.each do |activity| %>
    <tr>
      <td><%= activity.rink.name %></td>
      <td><%= activity.start_time.to_s(:short) %> - <%= activity.end_time.to_s(:time) %></td>
      <td><%= activity.gender %></td>
      <td><%= activity.age_range %></td>
    </tr>
  <% end %>

</table>